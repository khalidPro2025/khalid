FROM fauria/vsftpd
RUN apt-get update && apt-get install -y curl
COPY vsftpd.conf /etc/vsftpd.conf
CMD ["/usr/sbin/vsftpd", "/etc/vsftpd.conf"]

vsftpd.conf
anonymous_enable=NO
local_enable=YES
write_enable=YES
chroot_local_user=YES
listen=YES
listen_ipv6=NO
pasv_enable=YES
pasv_min_port=40000
pasv_max_port=40100
allow_writeable_chroot=YES
